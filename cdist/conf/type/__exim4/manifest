os="$(cat "$__global/explorer/os")"
require=""

case "$os" in
  debian|ubuntu)
      for i in exim4; do
        __package $i --state present
        require="$require __package/$i"
      done
      require=$require __file "/etc/exim4/update-exim4.conf.conf.TMP" --source "$__type/files/debian-update-exim4.conf.conf" --mode 0644
# TODO aliases
  ;;
  *)
    echo "WARNING: $os not supported yet for exim4 configuration"
  ;;
esac


